{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CrabSock",
  "version": "0.1.0",
  "identifier": "dev.crabsock.app",
  "build": {
    "beforeBuildCommand": "vite build",
    "beforeDevCommand": "vite",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "additionalBrowserArgs": "--no-sandbox",
        "title": "CrabSock",
        "width": 1100,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"]
  }
}