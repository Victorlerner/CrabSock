{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CrabSock",
  "version": "0.1.0",
  "identifier": "dev.crabsock.app",
  "build": {
    "beforeBuildCommand": "vite build",
    "beforeDevCommand": "vite",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "additionalBrowserArgs": "--no-sandbox",
        "title": "CrabSock",
        "width": 1100,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "app", "dmg","msi"],
    "resources": [
      "resources/wintun/bin/amd64/wintun.dll",
      "resources/wintun/bin/arm64/wintun.dll",
      "resources/wintun/bin/x86/wintun.dll",
      "resources/wintun/bin/arm/wintun.dll",
      "resources/sing-box/sing-box.exe"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}